{
  "name": "OctoSSO",
  "version": "1.0.2",
  "manifest_version": 3,
  "description": "OctoSSO is a browser extension to assist GitHub's single sign-on feature",
  "homepage_url": "https://github.com/ganta/octosso",
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon@2x.png",
    "144": "icons/icon@3x.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
